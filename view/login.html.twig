{% extends "layout.html.twig" %}
{% block title %}{{title}}{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <main role="main" class="container">
        <div class="row justify-content-center">
            <div class="mt-3 col-lg-4 col-md-6 col-sm-12">
                <form class="form-control" action="login" method="POST">
                    <h5 class="text-center">{{title}}</h5>
                    <small>{{ error }}</small>
                    <div class="form-group">
                      <label for="InputEmail" >Email адрес</label>
                      <input type="email" class="form-control" id="InputEmail" name="email" placeholder="Введите email">
                    </div>
                    <div class="form-group">
                      <label for="InputPassword">Пароль</label>
                      <input type="password" class="form-control" id="InputPassword" name="password" placeholder="Пароль">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
{% endblock %}